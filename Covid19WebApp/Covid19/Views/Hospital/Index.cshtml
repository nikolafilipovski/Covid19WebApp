@model IEnumerable<Covid19.Entities.Hospital>

<div class="row text-center">
    <div class="col-sm-12 col-md-12">
        <h1>Hospitals</h1>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-sm-12 col-md-6 offset-3">
        <a asp-action="Create" class="btn btn-success btn-block"><i class="fas fa-plus-square"></i> Create</a>
    </div>
</div>

<hr />

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Max capacity</th>
            <th>Current capacity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hospital in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => hospital.hospitalID)</td>
                <td>@Html.DisplayFor(modelItem => hospital.hospitalName)</td>
                <td>@Html.DisplayFor(modelItem => hospital.maxCapacity)</td>
                <td>@Html.DisplayFor(modelItem => hospital.currentCapacity)</td>
                <td class="w-50 text-center">
                    <a asp-action="Edit" asp-route-id="@hospital.hospitalID" class="btn btn-secondary w-25">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@hospital.hospitalID" class="btn btn-info w-25">
                        <i class="fas fa-info"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@hospital.hospitalID" class="btn btn-danger w-25">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
