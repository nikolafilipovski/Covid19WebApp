@model Covid19.Entities.Hospital

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Hospital</h4>
<hr />
<div class="row">
    <div class="col-sm-12 col-md-6 offset-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="hospitalID" />
            <div class="form-group">
                <label asp-for="hospitalName" class="control-label"></label>
                <input asp-for="hospitalName" class="form-control" />
                <span asp-validation-for="hospitalName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="maxCapacity" class="control-label"></label>
                <input asp-for="maxCapacity" class="form-control" />
                <span asp-validation-for="maxCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="currentCapacity" class="control-label"></label>
                <input asp-for="currentCapacity" class="form-control" />
                <span asp-validation-for="currentCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cityID" class="control-label"></label>
                <select asp-for="cityID" class="form-control" asp-items="ViewBag.cityID"></select>
                <span asp-validation-for="cityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
